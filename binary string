#include <bits/stdc++.h>
using namespace std;

int main() {
	int t; cin>>t; while(t--){
	    int n;
	    cin>>n;
	    string s;
	    cin>>s;
	    int r=0,k;
	    for(int i=0; s[i]!='\0'; i++){
	        if(s[i] == '1'){
	                    r++;
	                }
	            }
	        
	       k=(r*(r-1))/2;
	    
	   cout<<k<<endl;
	}
	return 0;
}
